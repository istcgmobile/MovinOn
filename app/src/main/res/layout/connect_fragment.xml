<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp">

            <RelativeLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginBottom="4dp">

                <ImageView
                    android:id="@+id/movinonicon"
                    android:layout_width="200dp"
                    android:layout_height="120dp"
                    android:scaleType="fitCenter"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/movinon"/>


            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/sociallayout"
                android:layout_below="@id/movinonicon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <ImageView
                    android:id="@+id/facebookicon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:scaleType="fitStart"
                    android:layout_margin="8dp"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/facebook_icon"/>

                <ImageView
                    android:id="@+id/twittericon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:scaleType="fitStart"
                    android:layout_margin="8dp"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/twitter_icon"/>

                <ImageView
                    android:id="@+id/instagramicon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:scaleType="fitStart"
                    android:layout_margin="8dp"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/instagram_icon"/>


            </LinearLayout>
            <RelativeLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/sociallayout"
                android:gravity="center">

            <ImageView
                android:id="@+id/abouticon"
                android:layout_width="24dp"
                android:layout_height="wrap_content"
                android:scaleType="fitStart"
                android:layout_alignParentLeft="true"
                android:src="@drawable/ic_email_black_24dp"/>

            <TextView
                android:id="@+id/artistdesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/abouticon"
                android:textColorLink="#000000"
                android:textSize="16sp"
                android:text="exec@movinon.org"
                android:autoLink="email"/>
            </RelativeLayout>
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp">

            <RelativeLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <TextView
                    android:id="@+id/collab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:textAlignment="center"
                    android:textSize="16sp"
                    android:text="In Collaboration With:"
                    android:textStyle="bold"
                    android:paddingBottom="8dp"/>
                <TextView
                    android:id="@+id/collabwith"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/collab"
                    android:textAlignment="center"
                    android:textSize="16sp"
                    android:text="The University Park Allocation Committee\nThe Student Programming Association\nThe Association of Residence Hall Students\nThe University Park Undergraduate Association\nGraduate Professional Student Association"
                    android:paddingBottom="8dp"/>
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp">

            <RelativeLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <ImageView
                    android:id="@+id/clubicon"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:scaleType="fitCenter"
                    android:layout_margin="8dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/club_icon"/>

                <TextView
                    android:id="@+id/clubdesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/clubicon"
                    android:layout_centerHorizontal="true"
                    android:textAlignment="center"
                    android:textSize="16sp"
                    android:text="Created by IST Consulting Group in partnership with Movin' On"
                    android:paddingBottom="8dp"/>
            </RelativeLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>
</android.support.v4.widget.NestedScrollView>